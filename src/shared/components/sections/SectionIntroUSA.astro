---
import Section from "@/shared/components/Section.astro";
import Typography from "@/shared/components/ui/Typography.astro"

import { getI18N } from "../../i18n";

const { language } = Astro.props
const i18n = getI18N({ language })
---
<img
  src="/logotipo-portico-sport-circular-white.svg"
  alt="Portico Sport"
  width="160"
  height="160"
  class=" mx-auto lg:block"
/>
<Section id={i18n.PAGES.HOME.INTRO_SECTION_USA.ID} className="text-center">
  <Typography tag="h2" className="mx-auto mb-10 text-wrap font-semibold" text={i18n.PAGES.HOME.INTRO_SECTION_USA.TITLE} />
  <Typography tag="div" className="max-w-[60ch] mx-auto" text={i18n.PAGES.HOME.INTRO_SECTION_USA.DESCRIPTION} />
</Section>
<div class = "flex justify-center items-center scale-[65%] flex-col md:flex-row ml-10 mr-10">
<div class="p-4 rounded-xl bg-black/75 border border-primary ">
  <Typography tag="h3" text={i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.TITLE} className="mb-8 font-thin" responsive type="primary" />
  <div class="flex flex-col gap-4">
    <div>
      <div class="flex items-center gap-4 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 1 0-2.636 6.364M16.5 12V8.25" />
        </svg>
        <a class="text__glowing" href={`mailto:${i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.EMAIL}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.EMAIL}</a>
      </div>
      <div class="flex items-center gap-4 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
        </svg>
        <strong>{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.PHONE_TITLE}</strong>
      </div>
      <div>
        <a class="pl-12 block text__glowing" href={`tel:${i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.PHONE_1}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.PHONE_1}</a>
        <a class="pl-12 block text__glowing" href={`tel:${i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.PHONE_2}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.PHONE_2}</a>
      </div>
    </div>
    <div>
      <div class="flex items-center gap-4 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
        </svg>
        <strong>{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.ADDRESS_TITLE}</strong>
      </div>
      <div class="text-sm">
        {i18n.PAGES.CLIENT_CONTACT.CONTACT_USA.DEPARTMENTS.COMPANY.ADDRESS}
      </div>
    </div>
  </div>
</div>
</div>
